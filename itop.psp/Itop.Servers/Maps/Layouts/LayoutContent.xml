<statements>
	<insert id='InsertLayoutContent' parameterClass='LayoutContent'>
		INSERT INTO PSP_LayoutContents		(
			"UID",
			"LayoutID",
			"ChapterName",
			"ParentID",
			"ContentType","CreateDate",
			"Remark"
		)
		VALUES
		(
			#UID#,
			#LayoutID#,
			#ChapterName#,
			#ParentID#,
			#ContentType#,GetDate(),
			#Remark#
		)
	</insert>



